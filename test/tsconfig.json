{    
    "compilerOptions": {
        "target": "ES2017",        
        "moduleResolution": "Node",
        "experimentalDecorators": true,        
        "jsx": "preserve",      
        "jsxFactory": "this.$render",
        "jsxFragmentFactory": "this.$render",
        "esModuleInterop": true,        
        "forceConsistentCasingInFileNames": true,        
        "declaration": false,        
        "baseUrl": ".",
        "paths": {
            "@modules/*": ["modules/*"],
            "@scom/scom-widget-repos": [".."],
            "@scom/scom-storage": ["../repos/scom-storage"]
        }
    },
    "include": ["modules/**/*.ts","modules/**/*.tsx"],
    "exclude": ["node_modules"]
}
